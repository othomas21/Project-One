# Curie Radiology Search Engine - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
DATABASE_URL=your_supabase_database_url

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key_for_embeddings
HUGGING_FACE_API_KEY=your_hugging_face_api_key

# Medical AI Models (Optional - for advanced features)
MED_GEMMA_API_ENDPOINT=your_med_gemma_endpoint
MONAI_API_ENDPOINT=your_monai_api_endpoint

# External Data Sources
RADIOPAEDIA_API_KEY=your_radiopaedia_api_key
RSNA_API_KEY=your_rsna_api_key

# File Upload & Storage
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=dcm,jpg,jpeg,png,nii,nii.gz

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_UPLOAD=true
NEXT_PUBLIC_ENABLE_DICOM=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_EDUCATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_UPLOAD_PER_HOUR=20