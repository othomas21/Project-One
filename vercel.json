{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.{js,ts}": {
      "memory": 1024,
      "maxDuration": 30
    },
    "src/app/api/upload/**/*.{js,ts}": {
      "memory": 3008,
      "maxDuration": 300
    },
    "src/app/api/medgemma/**/*.{js,ts}": {
      "memory": 3008,
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "regions": ["iad1"]
}